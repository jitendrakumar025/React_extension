{
	"manifest_version": 3,
	"name": "Give a suitable name to your extension",
	"version": "1.0.0",
	"description": "Describe your extension here",
	"action": {
		"default_popup": "index.html", 
		"default_icon": "icon-popup.png"
	},
	"permissions": [
		"storage" 
	],
	"background": {
		"service_worker": "/static/js/background.js" 
	},
	"host_permissions": [  
		"http://localhost:3000/",
		"http://localhost:5000/"
	],
	"icons": {
		"128": "icon-342.png" 
	},
	"externally_connectable": { 
		"matches": ["*://*/*", "https://www.external_website_url/*"]
	},
	"content_scripts": [  
		{
			"matches": ["http://www.youtube.com/*", "https://www.linkedin.com/*","https://mail.google.com/*"], 
			"js": [
				"/static/js/content.js",
				"/static/js/background.js",
				"/static/js/main.js"
			]
		},
		{
			"matches": ["https://www.external_website_url/*"], 
			"js": ["/static/js/background.js"]
		}
	],
	"web_accessible_resources": [ 
		{
			"resources": ["icon-342.png"],
			"matches": ["https://*/*"]
		}
	]
}
